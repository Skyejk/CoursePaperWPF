<Page x:Class="HotelComplexWPF.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelComplexWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="650*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="850*"/>
            <RowDefinition Height="290*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="tblUserName" Text="Username" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbxUserName"       />
            <TextBlock x:Name="tblUserPassword" Text="Password" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="tbxUserPassword" />
            <TextBlock x:Name="tblCaptcha" Text="Capcha" HorizontalAlignment="Center"/>
            <TextBox x:Name="tbxCaptcha"        />

            <Button x:Name="btnEnter" Content="Войти" Click="btnEnter_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
